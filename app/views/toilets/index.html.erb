<div class="d-flex" id="map-container">
  <div class="container ml-0 my-3 pb-5">
    <br>
    <div class="search-title">
      <h1>Toilets around <%= params[:query] %> </h1>
    </div>
    <br>
    <div class="search-form-control" id="second-searchbar">
      <%= form_tag toilets_path, method: :get do %>
        <%= text_field_tag :query,params[:query], class: "form-control"%>
        <%= submit_tag "search", class: "hidden" %>
        <i class = "fas fa-search btn btn-danger" style="line-height: 1.5em;"></i>
      <% end %>
    </div>
    <% @toilets.each do |toilet| %>
      <%= render 'shared/index-card', toilet:toilet %>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>