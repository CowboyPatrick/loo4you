<div class="banner" style="background-image: linear-gradient(to left, rgba(0,0,0,0), rgba(200,200,200,0.3)), url(https://images.pexels.com/photos/3964138/pexels-photo-3964138.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
  <div class="row">
    <h2>
      <span
           class="txt-rotate"
           data-period="500"
           data-rotate='[ "Need to go?", "Worry no more." ]'></span>
    </h2>
  </div>
  <div class="col-md-6 offset-md-3">
    <!-- <form novalidate="novalidate" class="simple_form search" action="/toilets" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;"/> -->
    <div class="search-form-control">
      <%= form_tag toilets_path, method: :get do %>
        <%= text_field_tag :query,params[:query], class: "form-control",placeholder: "Find a loo"%>
        <%= submit_tag"search", class: "btn btn-danger " do%>
          <i class = "fas fa-search"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
