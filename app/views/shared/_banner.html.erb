<div class="banner" style="background-image: linear-gradient(to left, rgba(0,0,0,0), rgba(200,200,200,0.3)), url(https://images.unsplash.com/photo-1553444835-65ddad82cd2d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1931&q=80)">
  <div class="container">
    <div class="row">
      <h2>
        <span id="catch">Book a toilet</span>
        <span
      class="txt-rotate"
      data-period="500"
      data-rotate='[ "anywhere", "anytime", "whenever", "wherever." ]'></span>
      </h2>
    </div>
  </div>
  <div class="col-md-6 offset-md-3">
    <!-- <form novalidate="novalidate" class="simple_form search" action="/toilets" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;"/> -->
    <div class="search-form-control">
      <%= form_tag toilets_path, method: :get do %>

        <%= text_field_tag :query,params[:query], class: "form-control",placeholder: "Find a loo near you"%>
        <%= submit_tag "search", class: "hidden" %>
        <i class = "fas fa-search btn btn-danger" style="line-height: 1.5em;"></i>

      <% end %>
    </div>
  </div>
</div>
